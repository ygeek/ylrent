<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>源涞国际 - 注册</title>
    <link type="text/css" rel="stylesheet" href="/css/style.css" />
</head>
<body>

<% include header.ejs %>

<div class="clear"></div>
<div class="registered_login">
    <div class="registered">
        <div class="registered_m">
            <div class="registered_title">
                <h1>注册源涞账号</h1>
                <a href="/user/login/">已有账号？登录 >></a>
            </div>
            <div class="clear"></div>
            <div class="registered_m01">
                <form action="/user/register/" method="post">
                    <ul>
                        <li>
                            <img src="/img/z_icon01.png" />
                            <input type="text"
                                   name="username"
                                   onfocus="if (value =='/  手机号'){value =''}"
                                   onblur="if (value ==''){value='/  手机号'}"
                                   value="/  手机号"
                                   class="text01 current"
                            />
                        </li>
                        <% if (usernameError) { %>
                            <p><%= usernameError %></p>
                        <% } %>

                        <li class="yanzm" style="background:none; padding:0;">
                            <span><img src="/img/z_icon02.png" />
                                <input type="text"
                                       name="smscode"
                                       onfocus="if (value =='/  验证码'){value =''}"
                                       onblur="if (value ==''){value='/  验证码'}"
                                       value="/  验证码"
                                       class="text02"
                                />
                            </span>
                            <em>获取验证码</em>
                        </li>
                        <% if (smsError) { %>
                            <p><%= smsError %></p>
                        <% } %>

                        <li>
                            <img src="/img/z_icon03.png" />
                            <input type="text"
                                   name="name"
                                   onfocus="if (value =='/  姓名'){value =''}"
                                   onblur="if (value ==''){value='/  姓名'}"
                                   value="/  姓名"
                                   class="text01"
                            />
                        </li>
                        <br />
                        <li>
                            <img src="/img/z_icon04.png" />
                            <input type="text"
                                   name="email"
                                   onfocus="if (value =='/  邮箱'){value =''}"
                                   onblur="if (value ==''){value='/  邮箱'}"
                                   value="/  邮箱"
                                   class="text01 current"
                            />
                        </li>
                        <% if (nameError) { %>
                            <p><%= nameError %></p>
                        <% } %>

                        <li>
                            <img src="/img/z_icon05.png" />
                            <input type="text"
                                   name="password"
                                   onfocus="if (value =='/  输入密码'){value =''}"
                                   onblur="if (value ==''){value='/  输入密码'}"
                                   value="/  输入密码"
                                   class="text01 current"
                            />
                        </li>
                        <% if (passwordError) { %>
                            <p><%= passwordError %></p>
                        <% } %>

                        <li>
                            <img src="/img/z_icon06.png" />
                            <input type="text"
                                   name="password2"
                                   onfocus="if (value =='/  输入密码'){value =''}"
                                   onblur="if (value ==''){value='/  输入密码'}"
                                   value="/  输入密码"
                                   class="text01 current"
                            />
                        </li>
                        <% if (password2Error) { %>
                            <p><%= password2Error %></p>
                        <% } %>

                        <li style="background:none; padding:0; color:#fff;">
                            <input name="isCorp"
                                   type="checkbox"
                                   style="margin:0 5px 0 0;"
                                   value=""
                            />注册企业账号
                        </li>
                        <li>
                            <img src="/img/z_icon07.png" />
                            <input type="text"
                                   name="corpName"
                                   onfocus="if (value =='/  企业名称'){value =''}"
                                   onblur="if (value ==''){value='/  企业名称'}"
                                   value="/  企业名称"
                                   class="text01 current"
                            />
                        </li>
                        <% if (corpNameError) { %>
                            <p><%= corpNameError %></p>
                        <% } %>

                        <li>
                            <img src="/img/z_icon08.png" />
                            <input type="text"
                                   name="title"
                                   onfocus="if (value =='/  职位'){value =''}"
                                   onblur="if (value ==''){value='/  职位'}"
                                   value="/  职位"
                                   class="text01"
                            />
                        </li>
                        <br />

                        <li>
                            <img src="/img/z_icon09.png" />
                            <input type="text"
                                   name="address"
                                   onfocus="if (value =='/  地址'){value =''}"
                                   onblur="if (value ==''){value='/  地址'}"
                                   value="/  地址"
                                   class="text01"
                            />
                        </li>
                        <br />
                        <li style="background:none; padding:0; color:#fff;">
                            <input name="agreed"
                                   type="checkbox"
                                   style="margin:0 5px 0 0;"
                                   value=""
                            />同意《服务使用协议》
                            <input type="submit" class="button01" value="注册"/>
                        </li>
                    </ul>
                </form>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>

<% include footer.ejs %>

</body>
</html>
