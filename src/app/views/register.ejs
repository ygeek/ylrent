<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>源涞国际 - 注册</title>
    <link type="text/css" rel="stylesheet" href="/css/style.css" />
    <!-- 为使用方便，直接使用jquery.js库 -->
    <script type="text/javascript" src="/files/js/jquery-1.8.3.min.js"></script>
    <!-- 引入封装了failback的接口--initGeetest -->
    <script src="http://static.geetest.com/static/tools/gt.js"></script>

</head>
<body>

<% include header.ejs %>

<div class="clear"></div>
<div class="registered_login">
    <div class="registered">
        <div class="registered_m">
            <div class="registered_title">
                <h1>注册源涞账号</h1>
                <a href="/user/login/">已有账号？登录 >></a>
            </div>
            <div class="clear"></div>
            <div class="registered_m01">
                <form action="/user/register/" method="post" onsubmit="return checkRegister();">
                    <ul>
                        <li>
                            <img src="/img/z_icon01.png" />
                            <input id="usernameField"
                                   type="text"
                                   name="username"
                                   onfocus="if (value =='/  手机号'){value =''}"
                                   onblur="if (value ==''){value='/  手机号'}"
                                   value="/  手机号"
                                   class="text01 current"
                            />
                        </li>
                        <li class="cuowu">
                        <p class="usernameError" <% if (usernameError) { %>style="display:block;"<% } %>><%= usernameError %></p>
                        </li>
                        <li class="yanzm" style="background:none; padding:0;">
                            <span>
                                <img src="/img/z_icon02.png" />
                                <input type="text"
                                       name="smscode"
                                       onfocus="if (value =='/  验证码'){value =''}"
                                       onblur="if (value ==''){value='/  验证码'}"
                                       value="/  验证码"
                                       class="text02"
                                />
                            </span>
                            <em class="sendButton" id="popup-button">获取验证码</em>
                        </li>
                        <li class="cuowu">
                        <p class="smsError" <% if (smsError) { %>style="display:block;"<% } %>><%= smsError %></p>
                        </li>
                        <li>
                            <img src="/img/z_icon03.png" />
                            <input type="text"
                                   name="name"
                                   onfocus="if (value =='/  姓名'){value =''}"
                                   onblur="if (value ==''){value='/  姓名'}"
                                   value="/  姓名"
                                   class="text01"
                            />
                        </li>
                        <li class="cuowu">
						<p  class="name" <% if (nameError) { %>style="display:block;"<% } %>><%= nameError %></p>
                        </li>
                        <li>
                            <img src="/img/z_icon04.png" />
                            <input type="text"
                                   name="email"
                                   onfocus="if (value =='/  邮箱'){value =''}"
                                   onblur="if (value ==''){value='/  邮箱'}"
                                   value="/  邮箱"
                                   class="text01 current"
                            />
                        </li>
                       <li class="cuowu">
                            <p  class="email" <% if (nameError) { %>style="display:block;"<% } %>><%= nameError %></p>
                       
                            </li>
                        <li>
                            <img src="/img/z_icon05.png" />
                            <input type="text"
                                   name="password"
                                   onfocus="if (value =='/  输入密码'){value ='';type='password';} "
                                   onblur="if (value ==''){value='/  输入密码'; type='text'}"
                                   value="/  输入密码"
                                   class="text01 current"
                            />
                        </li>
                      <li class="cuowu">
                            <p  class="password" <% if (passwordError) { %>style="display:block;"<% } %>><%= passwordError %></p>
                      
                            </li>
                        <li>
                            <img src="/img/z_icon06.png" />
                            <input type="text"
                                   name="password2"
                                   onfocus="if (value =='/  输入密码'){value ='';type='password'}"
                                   onblur="if (value ==''){value='/  输入密码';type='text'}"
                                   value="/  输入密码"
                                   class="text01 current"
                            />
                        </li>
                        <li class="cuowu">
                            <p class="password2" <% if (password2Error) { %>style="display:block;"<% } %>><%= password2Error %></p>
                        
                            </li>
                        <li style="background:none; padding:0; color:#fff;">
                            <input name="isCorp"
                                   type="checkbox"
                                   style="margin:0 5px 0 0;"
                                   value="true"
                            />注册企业账号
                        </li>
                        <li>
                            <img src="/img/z_icon07.png" />
                            <input type="text"
                                   name="corpName"
                                   onfocus="if (value =='/  企业名称'){value =''}"
                                   onblur="if (value ==''){value='/  企业名称'}"
                                   value="/  企业名称"
                                   class="text01 current"
                            />
                        </li>
                        <li class="cuowu">
                        <p class="corpName" <% if (corpNameError) { %>style="display:block;"<% } %>><%= corpNameError %></p>

                        </li>
                        <li>
                            <img src="/img/z_icon08.png" />
                            <input type="text"
                                   name="title"
                                   onfocus="if (value =='/  职位'){value =''}"
                                   onblur="if (value ==''){value='/  职位'}"
                                   value="/  职位"
                                   class="text01"
                            />
                        </li>
                        <li class="cuowu">
						<p class="title" ></p>
                        
                        
                        </li>
                        <li>
                            <img src="/img/z_icon09.png" />
                            <input type="text"
                                   name="address"
                                   onfocus="if (value =='/  地址'){value =''}"
                                   onblur="if (value ==''){value='/  地址'}"
                                   value="/  地址"
                                   class="text01"
                            />
                        </li>
                     
						<p class="address" ></p>
                      
                        <li style="background:none; padding:0; color:#fff;">
                            <input name="agreed"
                                   type="checkbox"
                                   style="margin:0 5px 0 0;"
                                   value=""
                            />同意《服务使用协议》
                            <input type="submit" class="button01" value="注册"/>
                        </li>
                    </ul>
                    <div id="popup-captcha"></div>
                </form>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>

<% include footer.ejs %>
<script type="text/javascript" src="/files/js/login.js"></script>
</body>
</html>
