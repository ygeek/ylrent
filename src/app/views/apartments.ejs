    <div class="clear"></div>
    <div class="tuijianfangyuan">
        <div class="gxm_name02">
            <div class="gxm_name02_l">
               <!-- <a href="<%= url %>?isHot=<%= desc == 0 ? 1 : 0 %>"
                        <% if(sortBy === 'isHot') { %>
                   id="current03"
                   desc="<%= desc %>"
                        <% } %>
                >推荐房源</a>-->
                <a href="<%= url %>?price=<%= desc == 0 ? 1 : 0 %>"
                        <% if(sortBy === 'price') { %>
                   id="current03"
                   desc="<%= desc %>"
                        <% } %>
                >价格</a>
                <a href="<%= url %>?area=<%= desc == 0 ? 1 : 0 %>"
                        <% if(sortBy === 'area') { %>
                   id="current03"
                   desc="<%= desc %>"
                        <% } %>
                >面积</a>
            </div>
            <div class="gxm_name02_r"> 共找到<span><%= result.total %></span>套出租房源</div>
        </div>  
        <div class="clear"></div>
        <div class="tuijianfangyuan_m">
            <% result.docs.forEach(function(val) { %> 
            
            <ul>
                <a href="/apartment/detail/<%= val.id %>">
                    <img class="imghover"
                        <% if (val.imagekeys[0]) { %>
                            src="http://o7k9opgtr.bkt.clouddn.com/<%= val.imagekeys[0] %>?imageView2/0/w/320/h/240"
                        <% }else{ %>
                            src="/img/default.jpg"
                        <% } %>
                        style="width: 320px; max-height: 240px; height: auto;"
                    />
                </a>

                <li>
                    <h1><a href="/apartment/detail/<%= val.id %>"><%= val.comunity.name %><%= val.apartmentType.roomType.shi %>房<%= val.apartmentType.roomType.ting %>厅<%= val.apartmentType.roomType.wei %>卫</a></h1>
                    <p><%= val.comunity.name %><br />
                        酒店式公寓  |  <%= val.apartmentType.roomType.shi %>室<%= val.apartmentType.roomType.ting %>厅<%= val.apartmentType.roomType.wei %>卫  |  <%= val.area %>平米</p>
                    <p style="margin:130px 0 0 0;"><%= val.address %></p>
                </li>
                <li style="float:right; margin:0 10px 0 0;">
                    <h2>￥ <em><%= val.price %></em> / 月</h2>
                    <span><a href="/apartment/detail/<%= val._id %>">查看详情</a></span>
                </li>
            </ul>
            <% }) %>
            
            <div class="clear"></div>
            <div class="page01">
                <% if (result.page > 3) { %>
                <a href="/apartment/type/<%= typeId %>/?page=<%= result.page - 1 %>">上一页</a>
                <% } %>
                <% for (var i = startIndex; i <= endIndex; i++) { %>
                <a href="/apartment/type/<%= typeId %>/?page=<%= i %>"><%= i %></a>
                <% } %>
                <% if (result.page + 3 <= result.pages) { %>
                <a href="/apartment/type/<%= typeId %>/?page=<%= result.page + 1 %>">下一页</a>
                <% } %>
            </div>
        </div>
