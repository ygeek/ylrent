<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>源涞国际 - 忘记密码</title>
    <link type="text/css" rel="stylesheet" href="/css/style.css" />

</head>
<body>

<% include header.ejs %>

<div class="clear"></div>
<div class="registered_login">
    <div class="registered">
        <div class="registered_m">
            <div class="registered_title01">
                <h1>忘记密码</h1>
            </div>
            <div class="clear"></div>
            <!--
            <div class="buzou">
                <p><em id="current02">1</em><span>短信验证</span></p>
                <p><em>2</em><span>密码重置</span></p>
            </div>
            -->
            <div class="registered_m01" style="padding:20px 0 0 0;">
                <form action="/user/forget/" method="post">
                    <ul>
                        <li>
                            <img src="/img/z_icon01.png" />
                            <input type="text"
                                   name="username"
                                   onfocus="if (value =='/  账号'){value =''}"
                                   onblur="if (value ==''){value='/  账号'}"
                                   value="/  账号"
                                   class="text01 current"
                            />
                        </li>
                        <% if (usernameError) { %>
                            <p><%= usernameError %></p>
                        <% } %>

                        <li class="yanzm" style="background:none; padding:0;">
                            <span>
                                <img src="/img/z_icon02.png" />
                                <input type="text"
                                       name="smscode"
                                       onfocus="if (value =='/  验证码'){value =''}"
                                       onblur="if (value ==''){value='/  验证码'}"
                                       value="/  验证码"
                                       class="text02"
                                />
                            </span>
                            <em>获取验证码</em>
                        </li>
                        <% if (smsError) { %>
                            <p><%= smsError %></p>
                        <% } %>

                        <li>
                            <img src="/img/z_icon05.png" />
                            <input type="text"
                                   name="password"
                                   onfocus="if (value =='/  输入密码'){value =''}"
                                   onblur="if (value ==''){value='/  输入密码'}"
                                   value="/  输入密码"
                                   class="text01 current"
                            />
                        </li>
                        <% if (passwordError) { %>
                            <p><%= passwordError %></p>
                        <% } %>

                        <li>
                            <img src="/img/z_icon06.png" />
                            <input type="text"
                                   name="password2"
                                   onfocus="if (value =='/  输入密码'){value =''}"
                                   onblur="if (value ==''){value='/  输入密码'}"
                                   value="/  输入密码"
                                   class="text01 current"
                            />
                        </li>
                        <% if (password2Error) { %>
                            <p><%= password2Error %></p>
                        <% } %>

                        <li style="background:none; padding:0 0 0 60px; color:#fff;">
                            <input type="submit" class="button01" value="下一步"/>
                        </li>
                    </ul>
                </form>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>

<% include footer.ejs %>

</body>
</html>
