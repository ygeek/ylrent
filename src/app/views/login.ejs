<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>源涞国际 - 登录</title>
    <link type="text/css" rel="stylesheet" href="/css/style.css" />
	<script type="text/javascript" src="/files/js/jquery-1.8.3.min.js"></script>
</head>
<body>

<% include header.ejs %>

<div class="clear"></div>
<div class="registered_login">
    <div class="registered">
        <div class="registered_m">
            <div class="registered_title01">
                <h1>登陆源涞账号</h1>
                <span>还没有注册？<a href="/user/register/">注册账号>></a></span>
            </div>
            <div class="clear"></div>
            <div class="registered_m01">
                <form action="/user/login/" id="login" method="post" onsubmit="return checkLogin();">
                    <ul>
                        <li>
                            <img src="/img/z_icon01.png" style="margin-right:5px;"  />
                            <input type="text"
                                   name="username"
                                   onfocus="if (value =='/  账号'){value =''}"
                                   onblur="if (value ==''){value='/  账号'}"
                                   value="/  账号"
                                   class="text01 current"
                            />
                        </li>
                        <p  class="usernameError" <% if (usernameError) { %>style="display:block;"<% } %>><%= usernameError %></p>

                        <li>
                            <img src="/img/z_icon06.png" />
                            <input type="text"
                                   name="password"
                                   onfocus="if (value =='/  输入密码'){value =''; type='password';} else { type='password'; }"
                                   onblur="if (value ==''){value='/  输入密码'; type='text';} else { type='password'; }"
                                   value="/  输入密码"
                                   class="text01 current"
                            />
                        </li>
                      
						<p  class="password" <% if (passwordError) { %>style="display:block;"<% } %>><%= passwordError %></p>
						
                        <li style="background:none; padding:0 0 0 20px; color:#fff;">
                            <input type="submit" class="button01" value="登录"/>
                            <a style="color:#fff; margin:0 0 0 30px; text-decoration:underline;" href="/user/forget/">忘记密码?</a>
                        </li>
                    </ul>
                </form>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>

<% include footer.ejs %>
<script type="text/javascript" src="/files/js/login.js"></script>
</body>
</html>
